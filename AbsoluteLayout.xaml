<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TallerIndividual.AbsoluteLayout"
             Title="AbsoluteLayout">
    
    <AbsoluteLayout>
        <ScrollView AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All">
            <StackLayout>
                <Label Text="Contenido de la pantalla" />
                <BoxView Color="Black" HeightRequest="1000" />
            </StackLayout>
        </ScrollView>
        <Button
       x:Name="CounterBtnGridLayoutPagina"
       Text="Ir a Grid Layout"
       SemanticProperties.Hint="Redirige a la pagina hecha con Grid Layout"
       Clicked="GoToGridLayoutButton"
       AbsoluteLayout.LayoutBounds="1,1,AutoSize,AutoSize"
       AbsoluteLayout.LayoutFlags="PositionProportional"
       HorizontalOptions="End"
       VerticalOptions="End"/>

    </AbsoluteLayout>
</ContentPage>


